{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    // "baseUrl": "./src",
    // "paths": {
    //   "@/*": ["*"]
    // },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
     "noImplicitAny": false, 
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": ["node_modules/@types"],
    "types": ["node"],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
